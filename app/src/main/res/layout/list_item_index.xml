<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/item_gap_select"
    android:layout_width="match_parent"
    android:layout_height="@dimen/large_item_height">

    <RelativeLayout
        android:id="@+id/enter_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_item_height">

        <ImageView
            android:id="@+id/iv_company_logo"
            android:layout_width="@dimen/iv_middle_width"
            android:layout_height="@dimen/iv_middle_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_user_img" />

        <TextView
            android:id="@+id/tv_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_company_logo"
            android:layout_toRightOf="@id/iv_company_logo"
            android:text="Android开发工程师"
            android:textColor="@color/common_black_txt"
            android:textSize="@dimen/middle_text_size" />

        <TextView
            android:id="@+id/tv_job_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_company_logo"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_job_name"
            android:text="全职"
            android:textColor="@color/common_blue_txt"
            android:textSize="@dimen/middle_text_size" />

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_company_logo"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_job_type"
            android:background="@drawable/btn_blue_bg_shape"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="荐"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/tv_other_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_company_logo"
            android:layout_toRightOf="@id/iv_company_logo"
            android:text="长沙 · 岳麓区   1-3年"
            android:textColor="@color/common_light_gray_txt"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/tv_company_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_company_logo"
            android:text="大唐科技有限公司 | 国企"
            android:textColor="@color/common_gray_txt"
            android:textSize="@dimen/small_medium_text_size" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_company_logo"
            android:layout_marginRight="15dp"
            android:text="4K-8K/月"
            android:textColor="@color/common_red_txt"
            android:textSize="@dimen/small_medium_text_size" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_company_logo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="10-23"
            android:textColor="@color/common_light_gray_txt"
            android:textSize="@dimen/small_text_size" />

    </RelativeLayout>

</LinearLayout>