<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/enter_detail_job"
    android:layout_width="match_parent"
    android:layout_height="@dimen/large_item_height"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_gap_select">

        <ImageView
            android:id="@+id/img_course_introduce"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_width="@dimen/iv_big_width"
            android:layout_height="@dimen/iv_big_height"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_default_logo"
            />
        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经济学原理"
            android:textSize="@dimen/big_medium_text_size"
            android:layout_toRightOf="@+id/img_course_introduce"
            android:layout_alignTop="@+id/img_course_introduce"
            />
        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_course_introduce"
            android:layout_toRightOf="@+id/tv_course_name"
            android:text="初"
            android:textSize="@dimen/small_text_size"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/common_blue_txt"
            android:background="@drawable/btn_blue_stroke_shape"
            />
        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老师张"
            android:textSize="@dimen/big_medium_text_size"
            android:layout_alignTop="@+id/img_course_introduce"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    <TextView
        android:id="@+id/tv_course_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_course_introduce"
        android:layout_below="@+id/tv_course_name"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxEms="20"
        android:maxLines="1"
        android:textSize="@dimen/middle_text_size"
        android:text="电子商务理论是一门专门讲述电商的基础知识以及发展史的课程电子商务理论是一门专门讲述电商的基础知识以及发展史的课程"
        />

    <TextView
        android:id="@+id/tv_course_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_course_desc"
        android:layout_alignParentRight="true"
        android:text="2017-01-04 -- 2017-07-01 "
        />



</RelativeLayout>
