<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height" />l

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_content_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_index" />

            <TextView
                android:id="@+id/tv_company_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="大唐科技有限公司"
                android:textColor="@color/common_black_txt"
                android:textSize="@dimen/large_text_size" />

            <!-- 行业 -->
            <TextView
                android:id="@+id/tv_industry_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_company_info"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:text="@string/industry"
                android:textColor="@color/common_black_txt"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/tv_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_company_info"
                android:layout_toRightOf="@id/tv_industry_desc"
                android:text="移动互联网"
                android:textColor="@color/common_gray_txt"
                android:textSize="@dimen/middle_text_size" />

            <!-- 性质 -->
            <TextView
                android:id="@+id/tv_company_type_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_industry_desc"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:text="@string/company_type"
                android:textColor="@color/common_black_txt"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/tv_company_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_industry_desc"
                android:layout_toRightOf="@id/tv_company_type_desc"
                android:text="国企"
                android:textColor="@color/common_gray_txt"
                android:textSize="@dimen/middle_text_size" />

            <!-- 规模 -->
            <TextView
                android:id="@+id/tv_company_size_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_company_type_desc"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:text="@string/company_type"
                android:textColor="@color/common_black_txt"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/tv_company_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_company_type_desc"
                android:layout_toRightOf="@id/tv_company_size_desc"
                android:text="50-100人"
                android:textColor="@color/common_gray_txt"
                android:textSize="@dimen/middle_text_size" />

            <View
                android:id="@+id/light_view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_company_size_desc"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/common_gray_line" />

            <!-- 公司地址 -->
            <LinearLayout
                android:id="@+id/address_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/light_view1"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_location" />

                <TextView
                    android:id="@+id/tv_address_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/address"
                    android:textColor="@color/common_black_txt"
                    android:textSize="@dimen/small_medium_text_size" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="湖南朋来信息科技有限公司"
                    android:textColor="@color/common_gray_txt"
                    android:textSize="@dimen/small_medium_text_size" />

            </LinearLayout>

            <!-- 联系电话 -->
            <LinearLayout
                android:id="@+id/tel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_layout"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_phone" />

                <TextView
                    android:id="@+id/tv_tel_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/telephone"
                    android:textColor="@color/common_black_txt"
                    android:textSize="@dimen/small_medium_text_size" />

                <TextView
                    android:id="@+id/tv_telphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1570079797"
                    android:textColor="@color/common_gray_txt"
                    android:textSize="@dimen/small_medium_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/large_text_size"
                    android:text="@string/company_desc"
                    android:textColor="@color/common_black_txt"/>

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_down"/>

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_medium_text_size"
                    android:text="@string/spread"
                    android:textColor="@color/common_black_txt"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_company_size_desc"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/common_gray_line" />

            <TextView
                android:id="@+id/tv_company_desc"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_medium_text_size"
                android:text="@string/spread"
                android:textColor="@color/common_black_txt"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>