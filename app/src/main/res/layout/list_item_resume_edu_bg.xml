<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--学校名称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="学校名称:"
            android:textColor="@color/common_light_gray_txt"
            android:textSize="@dimen/middle_text_size" />

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="江苏大学"
            android:textColor="@color/common_black_txt"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>

    <!--专业名称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="专业名称:"
            android:textColor="@color/common_light_gray_txt"
            android:textSize="@dimen/middle_text_size" />

        <TextView
            android:id="@+id/tv_profession"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="管理科学"
            android:textColor="@color/common_black_txt"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>

    <!--学历/学位-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="专业:"
            android:textColor="@color/common_light_gray_txt"
            android:textSize="@dimen/middle_text_size" />

        <TextView
            android:id="@+id/tv_professional"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="高中"
            android:textColor="@color/common_black_txt"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>

    <!--入学时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="入学时间时间:"
            android:textColor="@color/common_light_gray_txt"
            android:textSize="@dimen/middle_text_size" />

        <TextView
            android:id="@+id/tv_enter_school_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2016-09"
            android:textColor="@color/common_black_txt"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>

    <!--毕业时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="毕业时间:"
            android:textColor="@color/common_light_gray_txt"
            android:textSize="@dimen/middle_text_size" />

        <TextView
            android:id="@+id/tv_finish_school_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="至今"
            android:textColor="@color/common_black_txt"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/common_gray_line"
        />
</LinearLayout>