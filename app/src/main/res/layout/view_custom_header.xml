<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <com.penglai.kjds.ui.view.widget.banner.CustomerTopBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:banner_indicatorGravity="bottom|center_horizontal"
        app:banner_placeholderDrawable="@drawable/icon_default"
        app:banner_tipTextSize="12sp"
        app:banner_transitionEffect="fade" />
</LinearLayout>
