<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="@dimen/middle_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/iv_small_width"
        android:layout_height="@dimen/iv_small_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/system_message" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_img"
        android:layout_toRightOf="@id/iv_img"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_company_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android开发工程师"
            android:textColor="@color/common_black_txt"
            android:textSize="@dimen/middle_text_size" />

        <com.penglai.kjds.ui.view.widget.CircleImageView
            android:layout_width="@dimen/iv_small_dot_width"
            android:layout_height="@dimen/iv_small_dot_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@color/common_red_txt"
            app:civ_border_color="@color/white"
            app:civ_border_width="0dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_other_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_img"
        android:layout_toRightOf="@id/iv_img"
        android:text="HR查看了你的简历"
        android:textColor="@color/common_light_gray_txt"
        android:textSize="@dimen/middle_text_size" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_img"
        android:layout_marginRight="15dp"
        android:text="3小时前"
        android:textColor="@color/common_light_gray_txt"
        android:textSize="@dimen/small_medium_text_size" />

    <View
        android:id="@+id/light_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/common_gray_line" />
</RelativeLayout>