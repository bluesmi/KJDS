            <!--电话号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="手机号码:"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/common_light_gray_txt"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="13756783392"
                    android:textColor="@color/common_black_txt"
                    android:textSize="@dimen/middle_text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="邮箱:"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/common_light_gray_txt"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:text="1174724567@qq.com"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/common_black_txt"/>
            </LinearLayout>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/gray_content_bg"/>
    <!--教育背景-->

        <LinearLayout
            android:id="@+id/tv_edu_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_preview_resume_bg"
                android:gravity="center"
                android:text="教育背景"
                android:textColor="@color/white"
                android:textSize="@dimen/middle_text_size" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/xrv_view_edu_bg"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/gray_content_bg"
            />

    <!--工作经验-->
        <LinearLayout
            android:id="@+id/tv_work_exp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作经验"
                android:background="@drawable/icon_preview_resume_bg"
                android:textSize="@dimen/middle_text_size"
                android:textColor="@color/white"
                android:gravity="center"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/xrv_view_work_exp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--自我评价-->
        <LinearLayout
            android:id="@+id/tv_self_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_preview_resume_bg"
                android:gravity="center"
                android:text="自我评价"
                android:textColor="@color/white"
                android:textSize="@dimen/middle_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_evaluation_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="一切都OK"
                    android:textColor="@color/common_light_gray_txt"
                    android:textSize="@dimen/middle_text_size" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>