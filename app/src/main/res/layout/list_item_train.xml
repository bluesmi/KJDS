<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="155dp"  android:background="@drawable/item_gap_select">
    <RelativeLayout android:id="@+id/enter_detail_job"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

        <ImageView
            android:id="@+id/img_train_introduce"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_width="@dimen/iv_big_width"
            android:layout_height="@dimen/iv_big_height"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_default_logo"
            />
        <TextView
            android:id="@+id/tv_train_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="互联网大赛通知"
            android:textSize="@dimen/big_medium_text_size"
            android:layout_toRightOf="@+id/img_train_introduce"
            android:layout_alignTop="@+id/img_train_introduce"
            />
        <TextView
            android:id="@+id/tv_finish_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_course_introduce"
            android:layout_toRightOf="@+id/tv_train_name"
            android:text="已完结"
            android:textSize="@dimen/small_text_size"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/common_blue_txt"
            android:background="@drawable/btn_blue_stroke_shape"
            />
        <LinearLayout
            android:id="@+id/btn_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_train_introduce"
            android:layout_below="@+id/tv_train_name"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举办单位:"/>
            <TextView
                android:id="@+id/tv_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长沙学院"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_train_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_train_introduce"
            android:layout_below="@+id/btn_host"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxEms="20"
            android:maxLines="1"
            android:textSize="@dimen/middle_text_size"
            android:text="电子商务理论是一门专门讲述电商的基础知识以及发展史的课程电子商务理论是一门专门讲述电商的基础知识以及发展史的课程"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_train_introduce"
            android:layout_below="@+id/tv_train_desc"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已报名人数："/>
                <TextView
                    android:id="@+id/tv_part_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总人数："/>
                <TextView
                    android:id="@+id/tv_limit_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/common_gray_line"-->
        <!--android:layout_marginTop="3dp"-->
        <!--/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="报名时间:"/>
                <TextView
                    android:id="@+id/tv_apply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="2017至2018"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="培训时间:"/>
                <TextView
                    android:id="@+id/tv_train_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="2017至2018"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="地点:"/>
                <TextView
                    android:id="@+id/tv_train_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="长沙学院"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即报名"
            android:textSize="@dimen/big_text_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_blue_bg_shape"
            android:padding="10dp"
            android:textColor="@color/white"
            android:visibility="gone"
            />

    </LinearLayout>


</LinearLayout>