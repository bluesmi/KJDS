<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height" />

    <!--内容区域-->
    <LinearLayout
        android:id="@+id/favorite_default_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="visible"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_default_favorite"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/favorite_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_content_bg"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/enter_detail_layout"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="@dimen/large_item_height">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_company_logo"
                    android:layout_marginRight="10dp"
                    android:layout_width="@dimen/iv_middle_width"
                    android:layout_height="@dimen/iv_middle_height"
                    android:src="@drawable/icon_user_img"/>

                <TextView
                    android:layout_alignTop="@id/iv_company_logo"
                    android:layout_toRightOf="@id/iv_company_logo"
                    android:id="@+id/tv_job_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android开发工程师"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/common_black_txt"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_alignTop="@id/iv_company_logo"
                    android:layout_toRightOf="@id/tv_job_name"
                    android:id="@+id/tv_job_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全职"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/common_blue_txt"/>

                <TextView
                    android:layout_alignBottom="@id/iv_company_logo"
                    android:layout_toRightOf="@id/iv_company_logo"
                    android:id="@+id/tv_other_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="长沙 · 岳麓区   1-3年"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/common_light_gray_txt"/>

                <TextView
                    android:id="@+id/tv_company_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大唐科技有限公司 | 国企"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/small_medium_text_size"
                    android:textColor="@color/common_gray_txt"
                    android:layout_toRightOf="@+id/iv_company_logo" />

                <TextView
                    android:layout_alignTop="@id/iv_company_logo"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4K-8K/月"
                    android:textSize="@dimen/small_medium_text_size"
                    android:textColor="@color/common_red_txt"/>

                <TextView
                    android:layout_alignBottom="@id/iv_company_logo"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-23"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/common_light_gray_txt"/>

            </RelativeLayout>
            <View
                android:layout_marginBottom="5dp"
                android:layout_below="@id/iv_company_logo"
                android:id="@+id/light_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/common_gray_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">


                <LinearLayout
                    android:id="@+id/btn_cancel_favorite"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_cancel_favorite"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_gray_txt"
                        android:textSize="@dimen/large_text_size"
                        android:text="@string/cancel_favorite"/>

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/iv_company_logo"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/common_gray_line" />

                <LinearLayout
                    android:id="@+id/btn_send_resume"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_send_resume"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_blue_txt"
                        android:textSize="@dimen/large_text_size"
                        android:text="@string/send_resume"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>